{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["src/types/index.ts", "node_modules/@types"],

    "outDir": "build"
  }
}
