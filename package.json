{
  "name": "rest-tests",
  "description": "REST API tests",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run compile & node build/index.js",
    "compile": "npx tsc --outFile build/index.js",
    "start-db": "sh startdb.sh",
    "dev": "nodemon ./src/index.ts --watch ./src/**/*.*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/async-devil/RESTtests.git"
  },
  "keywords": [
    "MongoDB",
    "RESTful API",
    "Node.js",
    "Express"
  ],
  "author": "async-devil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/async-devil/RESTtests/issues"
  },
  "homepage": "https://github.com/async-devil/RESTtests#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.13",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "nodemon": "^2.0.7",
    "prettier": "2.1.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "tabWidth": 2,
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "babel",
      "import",
      "plugin:prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/.git",
      "/.vscode",
      "tsconfig.json",
      "node_modules",
      "/src/**/.js"
    ],
    "rules": {
      "no-console": "off",
      "prettier/prettier": "error"
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "/node_modules",
      "*.js",
      "/.vscode"
    ],
    "ext": "ts,hbs",
    "execMap": {
      "ts": "npx ts-node"
    }
  }
}
